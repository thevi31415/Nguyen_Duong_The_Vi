<script>
    window.addEventListener('load', function () {
        const col1 = document.getElementById('col-1');
        const col2 = document.getElementById('col-2');
        const gridContainer = document.getElementById('grid-container');

        // Lấy độ cao lớn nhất của hai cột
        const maxHeight = Math.max(col1.offsetHeight, col2.offsetHeight);

        // Đặt độ cao cho phần nền của cả hai cột
        col1.style.height = `${maxHeight}px`;
        col2.style.height = `${maxHeight}px`;

        // Đặt độ cao cho grid container
        gridContainer.style.height = `${maxHeight}px`;
    });
</script>