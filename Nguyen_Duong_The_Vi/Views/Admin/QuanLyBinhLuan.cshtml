@model List<Comment>
@{

    Layout = "Admin_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Management</title>
    <!-- Include the Tailwind CSS CDN or link to your local file -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>





<h1 class="text-2xl font-bold mb-4">Quản Lý Bình Luận</h1>
<div class="relative">
    <div class="py-5 sm:text-left">
        <h1 class="mb-4 text-3xl sm:text-4xl tracking-tight text-slate-900 font-extrabold dark:text-slate-200">Quản lý bình luận</h1>
    </div>

    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Bài viết ID
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Người dùng ID
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Số lượt thích
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Tên người dùng
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nội dung bình luận
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Ngày bình luận
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model)
                {
                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            @comment.IDBAIVIET
                        </td>
                        <td class="px-6 py-4">
                            @comment.IDUSER
                        </td>
                        <td class="px-6 py-4">
                            @comment.LIKE
                        </td>
                        <td class="px-6 py-4">
                            @comment.TENUSER
                        </td>
                        <td class="px-6 py-4">
                            @comment.COMMENT
                        </td>
                        <td class="px-6 py-4">
                            @comment.NGAYBINHLUAN?.ToString("dd/MM/yyyy")
                        </td>
                        <td class="px-6 py-4">
                          
                            <a asp-controller="Admin" asp-action="XoaBinhLuan" asp-route-id="@comment.ID" class="font-medium text-red-600 dark:text-red-500 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





</html>

