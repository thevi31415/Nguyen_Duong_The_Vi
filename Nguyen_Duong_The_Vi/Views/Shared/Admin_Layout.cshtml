<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Management</title>
    <!-- Include the Tailwind CSS CDN or link to your local file -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100 font-sans">

    <!-- Navigation -->
    <nav class="bg-blue-500 p-4">
        <div class="container mx-auto">
            <div class="flex items-center justify-between">
                <div class="text-white font-bold text-xl">Admin Panel Blog</div>
                <ul class="flex space-x-4">
                    <li><a asp-controller="Admin" asp-action="QuanLyBaiDang" class="text-white">Quản lý bài đăng</a></li>
                    <li><a href="#" class="text-white">Dashboard</a></li>
                    <li><a href="#" class="text-white">Settings</a></li>
                    <li><a asp-controller="Login" asp-action="DangXuat" class="text-white">Đăng xuất</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <script src="~/plugin/ckeditor/ckeditor.js"></script>

    <main class="max-w-[52rem] mx-auto px-4 pb-28 sm:px-6 md:px-8 xl:px-12 lg:max-w-6xl">
        @RenderBody();
        @RenderSection("DoanJS", false);
    </main>

    

    <!-- Footer -->
    <footer class="bg-gray-900 text-white text-center py-4">
        <p>&copy; 2024 Nguyen Duong The Vi. All rights reserved.</p>
    </footer>

</body>
</html>

